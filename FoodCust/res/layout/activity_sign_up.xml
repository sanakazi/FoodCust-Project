<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".SignUpActivity" >

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:hint="	First Name*"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/textfield" />
    
     <EditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/et1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:hint="	Last Name*"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/textfield" />
     
     <EditText
        android:id="@+id/et3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/et2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:hint="	Mobile No*"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/textfield" />
     
        <EditText
        android:id="@+id/et4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/et3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:hint="	Email Id*"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/textfield" />
        
        <EditText
        android:id="@+id/et5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/et4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:hint="	Location*"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/textfield" />
           
       <EditText
        android:id="@+id/et6"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/et5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:hint="	Zipcode*"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/textfield" />
              
       <EditText
        android:id="@+id/et7"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/et6"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:hint="	Password*"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/textfield" />
                 
         <EditText
        android:id="@+id/et8"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/et7"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:hint="	Confirm Password*"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/textfield" />
         
         <CheckBox
             android:id="@+id/cbox"
             android:layout_width="10dp"
             android:layout_height="10dp"
             android:layout_below="@id/et8"
             android:layout_marginLeft="30dp"
             android:layout_marginTop="18dp"
             android:background="@drawable/btn320" />
         
         <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/et8"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/cbox"
        android:layout_marginLeft="15dp"
        android:text="I agree with terms and conditions"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/et8"
            android:layout_alignRight="@+id/et8"
            android:layout_below="@+id/txt1"
            android:background="@drawable/actionbar"
            android:text="Register"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" 
            android:onClick= "btn_register"/>

</RelativeLayout>
